<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/c_ffffff</item>
    </style>

    <style name="CommonDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoadingProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/c_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CommonEditTextTitleStyle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>